<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="4dip" />
            <stroke android:width="0.5sp" android:color="#448aff" />
            <gradient android:angle="-90" android:startColor="#448aff" android:endColor="#448aff"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="0.5sp" android:color="#FF0A5FEC" />
            <gradient android:angle="-90" android:startColor="#0a5fec" android:endColor="#FF0A5FEC" />
        </shape>
    </item>
</selector>