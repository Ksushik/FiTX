        app:layout_constraintStart_toStartOf="@+id/imageViewBodyBack"
        app:layout_constraintTop_toTopOf="@+id/imageViewBodyBack" />

    <TextView
        android:id="@+id/textViewButtonCalves"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="226dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="300dp"
        android:onClick="onClick"
        android:text="@string/body_calves"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/imageViewBodyBack"
        app:layout_constraintTop_toTopOf="@+id/imageViewBodyBack" />

    <!-- END OF FRONT IMAGE HIDED -->

</android.support.constraint.ConstraintLayout>