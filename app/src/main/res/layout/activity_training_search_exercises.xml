        android:onClick="onClick"
        android:text="@string/body_shoulders"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBodyFront"
        app:layout_constraintTop_toTopOf="@+id/imageViewBodyFront" />

    <TextView
        android:id="@+id/textViewButtonBiceps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="105dp"
        android:onClick="onClick"
        android:text="@string/body_biceps"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBodyFront"
        app:layout_constraintTop_toTopOf="@+id/imageViewBodyFront" />

    <TextView
        android:id="@+id/textViewButtonForearms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="243dp"
        android:layout_marginLeft="232dp"
        android:layout_marginStart="232dp"
        android:onClick="onClick"
        android:text="@string/body_forearms"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBodyFront"
        app:layout_constraintStart_toStartOf="@+id/imageViewBodyFront" />

    <!-- END OF FRONT IMAGE SHOWED -->


    <ImageView
        android:id="@+id/imageViewButtonRotate"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/rotate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon_rotate" />

    <!-- BACK IMAGE HIDED -->

    <ImageView
        android:id="@+id/imageViewBodyBack"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="400sp"
